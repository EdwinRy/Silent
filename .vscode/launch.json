{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    //"console" : "integratedTerminal",
    "configurations": [
        {
            "name": "Compiler Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/SilentCompiler/bin/SilentC",
            //"preLaunchTask": "SilentCompiler Debug",
            "args": ["${workspaceRoot}/SilentCompiler/test2.silent"],
            //"stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "setupCommands": [
                {
                    "console" :"integratedTerminal",
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": false,
                "trace": false,
                "programOutput": true
            },
            
            "linux": {
                "console" :"integratedTerminal",
                "program": "${workspaceRoot}/SilentCompiler/bin/SilentC",
                "MIMode": "gdb"
            },
            "windows": {
                "program": "${workspaceRoot}/SilentCompiler/bin/SilentC.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "C:/mingw-64/bin/gdb.exe"
            },
            "osx": {
                "program": "${workspaceRoot}/SilentCompiler/bin/SilentC",
                "MIMode": "gdb"
            }
        },
        {
            "name": "VM Debug",
            "type": "cppdbg",
            "request": "launch",
            //"program": "${workspaceFolder}/SilentCompiler/bin/SilentC",
            //"preLaunchTask": "SilentCompiler Debug",
            "args": ["${workspaceRoot}/SilentCompiler/package.si"],
            //"stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": false,
                "trace": false
            },
            
            "linux": {
                "program": "${workspaceRoot}/SilentVM/bin/SilentVM",
                "MIMode": "gdb"
            },
            "windows": {
                "program": "${workspaceRoot}/SilentVM/bin/SilentVM.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "C:/mingw-64/bin/gdb.exe",
            },
            "osx": {
                "program": "${workspaceRoot}/main",
                "MIMode": "gdb"
            }
        }
    ]
}