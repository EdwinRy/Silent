{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SilentVM",
            "type": "shell",
            "command": "g++",
            "args": [
                "SilentCompiler/src/*.cpp",
                "SilentCompiler/src/Assembler/*.cpp",
                "-std=c++11",
                "-o","SilentCompiler/bin/SilentC",

            ],
            "group": 
            {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}